int main() {
    float celsius;
    char name[50];
    
    printf("Enter your name: ");
    scanf("%s", name);
    printf("Hello %s! Enter temperature in Celsius: ", name);
    scanf("%f", &celsius);
    
    float fahrenheit = (celsius * 9.0/5.0) + 32.0;
    
    printf("%s, %.2f°C is %.2f°F\n", name, celsius, fahrenheit);
    return 0;
}
