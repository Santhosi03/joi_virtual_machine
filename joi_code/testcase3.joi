int joi() {
    int n;
    printf("Enter array size: ");
    scanf("%d", &n);
    
    int sum = 0;
    int max = 0;
    
    printf("Enter %d numbers:\n", n);
    for(int i = 0; i < n; i++) {
        int num;
        scanf("%d", &num);
        sum += num;
        if(num > max) max = num;
    }
    
    float avg = (float)sum / n;
    printf("Sum: %d\n", sum);
    printf("Average: %.2f\n", avg);
    printf("Maximum: %d\n", max);
    return 0;
}
