int main() {
    int n;
    printf("Enter array size: ");
    scanf("%d", &n);
    
    int sum = 0;
    int max = 0;
    
    printf("Enter the numbers:\n");
    for(int i = 0; i < n; i++) {
        int num;
        scanf("%d", &num);
        sum += num;
        if(num > max) max = num;
    }
    
    float avg = sum / n;
    printf("%d", sum);
    printf("%f", avg);
    printf("%d", max);
    return 0;
}
